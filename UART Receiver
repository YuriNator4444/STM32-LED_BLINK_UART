  {
    uint8_t receivedData;
    HAL_UART_Receive(&huart2, &receivedData, 1, HAL_MAX_DELAY);
    
    // Process received data
    // ... (Your processing code here)
  }
  /* USER CODE END WHILE */

  /* USER CODE BEGIN 3 */
}
/* USER CODE END 3 */

